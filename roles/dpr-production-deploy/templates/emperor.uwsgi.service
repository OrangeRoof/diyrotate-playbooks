[Unit]
Description=uWSGI Emperor
After=network.target

[Service]
User=www-data
Group=www-data
ExecStart=/usr/bin/uwsgi --plugin python38 --emperor /etc/uwsgi/vassals --uid www-data --gid www-data
RuntimeDirectory=uwsgi
Restart=always
RestartSec=5s
KillSignal=SIGTERM
Type=notify
NotifyAccess=all

[Install]
WantedBy=multi-user.target